{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es5",
    "module": "es2015",
    "lib": [
      "dom",
      "es2017"
    ],
    "outDir": "./.tmp",
    "strict": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "paths": {
      "elements/*": [
        "projects/elements/src/public_api.ts"
      ]
    }
  },
  "angularCompilerOptions": {
    "debug": false,
    "genDir": "src/ngfactory"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.custom.ts"
  ]
}
